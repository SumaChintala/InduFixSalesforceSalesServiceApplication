<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Resolution_Time_Hrs__c</fullName>
    <description>Case resolution time calculation</description>
    <externalId>false</externalId>
    <formula>IF(ISBLANK(ClosedDate), (NOW() - CreatedDate) * 24, (ClosedDate - CreatedDate) * 24)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Resolution Time (Hrs)</label>
    <precision>18</precision>
    <required>false</required>
    <scale>2</scale>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Number</type>
    <unique>false</unique>
</CustomField>
